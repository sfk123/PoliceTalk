<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#7ac9c9c9" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
    android:bottom="1dp"
    android:top="0dp">
        <!-- 此处定义只有上下两边有边框 高度为1像素-->
    <!--边框里面背景颜色 白色-->
    <shape>
        <solid android:color="@android:color/transparent" />
    </shape>
</item>
    </layer-list>